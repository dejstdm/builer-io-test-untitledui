          </div>
        </div>
      </div>
    </section>
  </div>
</ProdLayout>

<style lang="scss">
@use "../scss/utils/variables" as *;

.design-system {
  min-height: 100vh;
  background: $color-white;

  &__header {
    background: $color-white;
  }

  &__gradient {
    height: 12px;
    background: #7F56D9;
  }

  &__content {
    padding: 4rem 5rem 6rem;

    @media (max-width: $md) {
      padding: 2rem 1.5rem 3rem;
    }
  }

  &__nav {
    margin-bottom: 8rem;

    @media (max-width: $md) {
      margin-bottom: 4rem;
    }
  }

  &__breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: $color-black;

    svg {
      flex-shrink: 0;
    }
  }

  &__intro {
    max-width: 64rem;

    &-text {
      h1 {
        margin-bottom: 1.25rem;
      }

      p {
        max-width: 100%;
      }
    }
  }
}

.typography-section {
  padding: 5rem;
  background: $color-white;

  @media (max-width: $md) {
    padding: 2rem 1.5rem;
  }

  &__container {
    display: flex;
    flex-direction: column;
    gap: 4rem;

    @media (max-width: $md) {
      gap: 2.5rem;
    }
  }
}

.typeface-showcase {
  display: flex;
  flex-direction: column;
  gap: 4rem;

  @media (max-width: $md) {
    gap: 2rem;
  }

  &__header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  &__sample {
    font-family: $font-primary;
    font-size: 7rem;
    font-weight: $font-regular;
    line-height: 1;
    color: $color-black;

    @media (max-width: $md) {
      font-size: 4rem;
    }
  }

  &__specimen {
    p {
      margin: 0;
      color: $color-black;
      word-break: break-all;

      @media (max-width: $md) {
        font-size: 1.5rem;
        line-height: 1.875rem;
      }
    }
  }
}

.type-scale {
  display: flex;
  flex-direction: column;
  gap: 2rem;

  @media (max-width: $md) {
    gap: 1.5rem;
  }

  &__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding-bottom: 1rem;
    border-bottom: 1px solid #D5D7DA;
    gap: 1rem;

    @media (max-width: $md) {
      flex-direction: column;
      gap: 0.5rem;
    }

    span:last-child {
      @media (max-width: $md) {
        font-size: 0.75rem;
        line-height: 1.125rem;
      }
    }
  }

  &__row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;

    @media (max-width: $lg) {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    @media (max-width: $sm) {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  &__item {
    p {
      margin: 0;
      color: $color-black;
    }
  }
}
</style>
